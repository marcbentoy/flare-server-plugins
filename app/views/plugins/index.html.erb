<div class="w-full">
  <div class="flex">
    <p>sidebar</p>
  </div>
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
      <%= notice %>
    </p>
  <% end %>
  <% content_for :title, "Plugins" %>
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Plugins</h1>
    <%= link_to "New plugin" , new_plugin_path,
          class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>
  <div id="plugins" class="min-w-full">
    <% @plugins.each do |plugin| %>
      <%= render plugin %>
      <p>
        <%= link_to "Show this plugin" , plugin,
                class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>