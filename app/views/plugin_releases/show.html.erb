<div class="p-4">
  <!-- headline -->
  <div class="flex w-full mb-8">
    <!-- plugin details -->
    <div class="flex-1">
      <p class="text-lightBlack mb-2 text-lg"> <%= @plugin.name %> </p>
      <p class="font-bold text-2xl text-black">
        <%= @plugin_release.code_name %>
      </p>
      <div class="flex w-full gap-2">
        <p class="font-medium text-md text-black"> v<%= @plugin_release.major %>.<%= @plugin_release.minor %>.<%= @plugin_release.patch %> </p>
        <p class="px-2 py-1 text-white bg-primary text-xs font-medium rounded-full h-max w-max"> In prod </p>
      </div>
    </div>
    <!-- plugin release actions -->
    <div class="flex-inline gap-2"> 
      <button class="py-2 px-4 bg-blue-50 rounded-md text-blue-500 hover:bg-blue-100"> Edit </button>
      <button class="py-2 px-4 bg-red-50 rounded-md text-red-500 hover:bg-red-100"> Delete </button>
    </div>
  </div>
  <!-- release details -->
  <div class="mt-4 mb-8">
    <p class="font-bold text-lightBlack text-md mb-2"> Release details </p>
    <div class="flex w-full gap-32">
      <!-- first column -->
      <div class="w-full">
        <div class="flex justify-between w-full">
          <p class="text-md text-lighterBlack"> Status </p>
          <p> success </p>
        </div>
      </div>
      <!-- second column -->
      <div class="w-full">
        <div class="flex justify-between w-full">
          <p class="text-md text-lighterBlack"> View in store </p>
          <p> link </p>
        </div>
      </div>
    </div>
  </div>
  <!-- build logs -->
  <div class="mt-4">
    <p class="font-bold text-lightBlack text-md mb-4"> Build logs </p>
    <div class="flex w-full gap-32 border-t border-darkerWhite p-4">
      <div class="flex w-full gap-4">
        <%= image_tag "icons/check_icon.svg" %>
        <p class="text-black"> Waiting for build </p>
      </div>
    </div>
    <div class="flex w-full gap-32 border-t border-darkerWhite p-4">
      <div class="flex w-full gap-4">
        <%= image_tag "icons/check_icon.svg" %>
        <p class="text-black"> Initializing build environment </p>
      </div>
    </div>
    <div class="flex w-full gap-32 border-t border-darkerWhite p-4">
      <div class="flex w-full gap-4">
        <%= image_tag "icons/check_icon.svg" %>
        <p class="text-black"> Cloning from source </p>
      </div>
    </div>
    <div class="flex w-full gap-32 border-t border-darkerWhite p-4">
      <div class="flex w-full gap-4">
        <%= image_tag "icons/check_icon.svg" %>
        <p class="text-black"> Building plugin </p>
      </div>
    </div>
    <div class="flex w-full gap-32 border-t border-darkerWhite p-4">
      <div class="flex w-full gap-4">
        <%= image_tag "icons/check_icon.svg" %>
        <p class="text-black"> Deploying to flare plugins store </p>
      </div>
    </div>
  </div>
</div>
